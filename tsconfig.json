{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["../assets/*"],
      "@app/*": ["app/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@stacks/*": ["stacks/*"],
      "@components/*": ["components/*"]
    }
  }
}
